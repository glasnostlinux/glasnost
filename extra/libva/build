#!/bin/sh -e

kiss-meson-config > meson.config

meson \
    --prefix=/usr \
    --cross-file="meson.config" \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    -Dwith_wayland=yes \
    -Dwith_x11=no \
    -Dwith_glx=no \
    -Ddocs=false \
    -Dintrospection=false \
    . output

ninja -C output
ninja -C output install
